@page
@model HealthModel
@{
    ViewData["Title"] = "Health Check";
}

<h2>Health Check</h2>

<p>Last Checked: @Model.LastChecked.ToString("g")</p>

<table class="table">
    <thead>
        <tr>
            <th>Host</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.SortedHealthResults)
        {
            <tr class="@(result.Value == "Healthy" ? "table-success" : "table-danger")">
                <td>@result.Key</td>
                <td>@result.Value</td>
            </tr>
        }
    </tbody>
</table>
